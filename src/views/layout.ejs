<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <title>HelloDoctor</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="topbar">
    <div class="brand">
      <div class="logo">Logo</div>
      HelloDoctor
    </div>

    <nav class="topnav">
      <a href="/agenda/day" class="<%= currentPath.startsWith('/appointments/day') || currentPath==='/agenda/day' ? 'active' : '' %>">Agenda</a>
      <a href="/patients" class="<%= currentPath.startsWith('/patients') ? 'active' : '' %>">Prontuários</a>
      <a href="/insurances" class="<%= currentPath.startsWith('/insurances') ? 'active' : '' %>">Convênios</a>
      <a href="#" class="disabled" style="opacity:.4; pointer-events:none;">Outros</a>
    </nav>

    <div class="topbar__right">
      <span class="badge">15 pacientes agendados para hoje</span>
      <div style="width:28px;height:28px;border-radius:999px;background:#e2e8f0;"></div>
    </div>
  </header>

  <div class="container">
    <%- body %>
  </div>
</body>
</html>
