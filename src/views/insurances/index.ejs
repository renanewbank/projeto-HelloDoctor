<h1>Convênios</h1>

<div class="card">
  <div class="header-actions">
    <div class="section-title">Lista de Convênios</div>
    <div class="primary-actions">
      <!-- futuro: abrir modal; por enquanto o form simples fica inline -->
    </div>
  </div>

  <!-- Form criar convênio (inline, simulando modal do Figma por enquanto) -->
  <form method="post" action="/insurances" class="row mt-12">
    <input class="w-260" name="name" placeholder="Nome do convênio" required>
    <input class="w-140" name="ans_code" placeholder="Código ANS">
    <input class="w-200" name="phone" placeholder="Telefone">
    <input class="w-260" name="email" placeholder="E-mail">
    <button>Criar convênio</button>
  </form>

  <table class="table mt-20">
    <thead>
      <tr>
        <th>#</th>
        <th>Convênio</th>
        <th>Código ANS</th>
        <th>Telefone</th>
        <th>E-mail</th>
      </tr>
    </thead>
    <tbody>
      <% if (!insurances.length) { %>
        <tr><td colspan="5" style="color:var(--muted)">Nenhum convênio cadastrado.</td></tr>
      <% } %>
      <% insurances.forEach(i => { %>
        <tr>
          <td><%= i.id %></td>
          <td><%= i.name %></td>
          <td><%= i.ans_code || '—' %></td>
          <td><%= i.phone || '—' %></td>
          <td><%= i.email || '—' %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
