<h1>Prontuários</h1>

<form method="get" action="/patients" class="row">
  <input type="text" name="q" value="<%= q %>" placeholder="Buscar nome, telefone ou CPF">
  <button>Buscar</button>
</form>

<form method="post" action="/patients" class="row card">
  <h3>Novo prontuário</h3>
  <input name="full_name" placeholder="Nome completo" required>
  <input name="profession" placeholder="Profissão">
  <input name="cpf" placeholder="CPF">
  <input name="phone_mobile" placeholder="Celular">
  <button>Criar</button>
</form>

<table>
  <thead><tr><th>#</th><th>Nome</th><th>Telefone</th><th>CPF</th></tr></thead>
  <tbody>
  <% patients.forEach(p => { %>
    <tr>
      <td><%= p.id %></td>
      <td><a href="/patients/<%= p.id %>"><%= p.full_name %></a></td>
      <td><%= p.phone_mobile || '' %></td>
      <td><%= p.cpf || '' %></td>
    </tr>
  <% }) %>
  </tbody>
</table>
